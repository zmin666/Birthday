<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="550px"
    android:id="@+id/ll_rigister"
    android:layout_marginLeft="94px"
    android:layout_marginRight="94px"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ll_rigister_1"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:orientation="vertical"
        app:errorEnabled="true">


        <EditText
            android:id="@+id/et_usename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入账户名"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"/>

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_marginTop="2px"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_c2874"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_marginTop="32px"
        android:gravity="end"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@null"
            android:hint="请输入密码"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:paddingTop="10px"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"/>

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2px"
        android:background="@color/color_c2874"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_marginTop="32px"
        android:gravity="end"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/et_pwd_agin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="确认密码"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingTop="10px"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"/>

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_marginTop="2px"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_c2874"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verification"
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入验证码"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:maxLength="12"
            android:paddingTop="10px"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_verification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_weight="1"
            android:text="发送验证码"/>


    </LinearLayout>

    <View
        android:layout_marginTop="2px"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_c2874"/>


</LinearLayout>