<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <ImageView
        android:layout_width="300px"
        android:layout_height="124px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200px"
        android:src="@mipmap/ic_launcher"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/activity_login_item"/>

        <include layout="@layout/activity_rigister_item"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_marginLeft="94px"
        android:layout_marginRight="94px"
        android:layout_marginTop="54px"
        >

        <Button
            android:id="@+id/bt_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_weight="2"
            android:background="@drawable/login_back"
            android:text="登录"
            android:textColor="@color/color_ffffff"
            android:textSize="32px"/>

        <Button
            android:id="@+id/bt_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@drawable/login_back"
            android:text="注册"
            android:textColor="@color/color_ffffff"
            android:textSize="32px"/>

    </LinearLayout>


</LinearLayout>
